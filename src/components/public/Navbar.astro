---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/mass-timings", label: "Mass Timings" },
  { href: "/announcements", label: "Announcements" },
  { href: "/calendar", label: "Calendar" },
  { href: "/gallery", label: "Gallery" },
  { href: "/clergy", label: "Clergy" },
  { href: "/contact", label: "Contact" },
];
---

<nav id="navbar" class="navbar-wrapper">
  <div class="navbar-container">
    <!-- MAIN NAVBAR -->
    <div id="navbar-inner" class="navbar-inner">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img
          src="/images/logo.png"
          alt="St. Teresa of Kolkata Church"
          class="h-11 w-11 rounded-full shadow-md bg-white"
        />

        <div class="hidden md:block leading-tight">
          <div class="font-serif font-semibold text-base">
            St. Teresa of Kolkata
          </div>
          <div class="text-xs opacity-75">
            Paldane Parish
          </div>
        </div>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden lg:flex items-center gap-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`nav-item ${currentPath === link.href ? "nav-active" : ""}`}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Button -->
      <button
        id="mobile-btn"
        class="lg:hidden p-2 rounded-xl hover:bg-white/10 transition"
        aria-label="Open Menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>
    </div>

    <!-- MOBILE MENU -->
    <div id="mobile-menu" class="hidden mobile-menu">
      <div class="px-4 py-4 space-y-2">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`block px-4 py-3 rounded-xl text-sm font-medium transition-all ${
              currentPath === link.href
                ? "bg-white/20 text-white font-semibold"
                : "text-white/90 hover:bg-white/10"
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<style>
  /* Floating wrapper */
  .navbar-wrapper {
    position: fixed;
    top: 18px;
    left: 0;
    right: 0;
    z-index: 999;
    display: flex;
    justify-content: center;
    pointer-events: none;
    transition: all 0.3s ease;
  }

  /* This container keeps navbar + mobile menu aligned perfectly */
  .navbar-container {
    pointer-events: auto;
    width: min(1100px, calc(100% - 32px));
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Main navbar pill */
  .navbar-inner {
    width: 100%;
    height: 72px;
    padding: 0 22px;

    display: flex;
    align-items: center;
    justify-content: space-between;

    border-radius: 999px;

    background: rgba(0, 0, 0, 0.45);
    backdrop-filter: blur(18px);

    border: 1px solid rgba(255, 255, 255, 0.18);

    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.25);

    color: white;
    transition: all 0.35s ease;
  }

  /* Navbar scrolled */
  .navbar-inner.scrolled {
    background: rgba(242, 247, 255, 0.92);
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    color: #111;
  }

  /* Desktop nav items */
  .nav-item {
    padding: 9px 14px;
    border-radius: 999px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.25s ease;
    color: rgba(255, 255, 255, 0.85);
  }

  .nav-item:hover {
    background: rgba(255, 255, 255, 0.15);
    color: white;
  }

  /* Active link */
  .nav-active {
    background: rgba(255, 255, 255, 0.22);
    color: white;
  }

  /* Scrolled nav items */
  .navbar-inner.scrolled .nav-item {
    color: rgba(20, 20, 20, 0.75);
  }

  .navbar-inner.scrolled .nav-item:hover {
    background: rgba(11, 94, 215, 0.08);
    color: #0b5ed7;
  }

  .navbar-inner.scrolled .nav-active {
    background: rgba(11, 94, 215, 0.12);
    color: #0b5ed7;
  }

  /* Mobile menu dropdown */
  .mobile-menu {
    width: 100%;
    margin-top: 10px;

    border-radius: 28px;
    overflow: hidden;

    background: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(18px);

    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.35);

    transition: all 0.3s ease;
  }

  /* Mobile menu scrolled */
  .mobile-menu.scrolled {
    background: rgba(242, 247, 255, 0.98);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .mobile-menu.scrolled a {
    color: rgba(20, 20, 20, 0.85) !important;
  }

  .mobile-menu.scrolled a:hover {
    background: rgba(11, 94, 215, 0.08) !important;
    color: #0b5ed7 !important;
  }
</style>

<script>
  const navbarInner = document.getElementById("navbar-inner");
  const mobileBtn = document.getElementById("mobile-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  function updateNavbar() {
    if (window.scrollY > 100) {
      navbarInner?.classList.add("scrolled");
      mobileMenu?.classList.add("scrolled");
    } else {
      navbarInner?.classList.remove("scrolled");
      mobileMenu?.classList.remove("scrolled");
    }
  }

  window.addEventListener("scroll", updateNavbar, { passive: true });
  updateNavbar();

  function openMenu() {
    mobileMenu?.classList.remove("hidden");
    mobileBtn?.setAttribute("aria-expanded", "true");
  }

  function closeMenu() {
    mobileMenu?.classList.add("hidden");
    mobileBtn?.setAttribute("aria-expanded", "false");
  }

  function toggleMenu() {
    if (mobileMenu?.classList.contains("hidden")) {
      openMenu();
    } else {
      closeMenu();
    }
  }

  mobileBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    toggleMenu();
  });

  // Close mobile menu after clicking a link
  document.querySelectorAll("#mobile-menu a").forEach((link) => {
    link.addEventListener("click", () => {
      closeMenu();
    });
  });

  // Close menu when clicking outside
  document.addEventListener("click", (e) => {
    if (!mobileMenu || !mobileBtn) return;

    if (
      !mobileMenu.contains(e.target) &&
      !mobileBtn.contains(e.target)
    ) {
      closeMenu();
    }
  });

  // Close menu with ESC key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      closeMenu();
    }
  });
</script>
